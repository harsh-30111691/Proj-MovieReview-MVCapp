<form method="post">
  <div class="form-row">
    <div class="form-group col-md-20">
      <label for="inputEmail4">Movie Title</label>
      <input type="text" class="form-control" name="Title" placeholder="Jawan">
    </div>
    <div class="form-group col-md-20" style="margin-top: 1.5rem;" >
      <label >Imdb Id</label>
      <input  type="text" class="form-control"name="imdbID"placeholder="t23422">
    </div>
  </div>
  <div class="form-group col-md-20" style="margin-top: 1.5rem;">
    <label >Release Year</label>
    <input  type="text" class="form-control"name="Year"placeholder="2020">
  </div>
  <div class="form-group col-md-20" style="margin-top: 1.5rem;">
    <label for="inputAddress2">Genre</label>
    <input type="text" name="Genre" class="form-control" id="inputAddress2" placeholder="comic , action">
  </div>
  <div class="form-row" style="margin-top: 1.5rem;">
    <div class="form-group col-md-20">
      <label for="inputCity">Director</label>
      <input type="text" name="Director" class="form-control" id="inputCity">
    </div>
     <div class="form-group col-md-20" style="margin-top: 1.5rem;">
      <label >Actors</label>
      <input type="text" name="Actors" class="form-control" >
    </div>
    <div class="form-group col-md-20 "style="margin-top: 1.5rem;">
      <label for="inputZip">Plot</label>
      <input style="block-size: 100px;" type="text"name="Plot"class="form-control" >
    </div>
  </div>
  
  <button type="submit" style="margin-top: 3rem;" class="btn btn-primary"asp-action="AddMovie"asp-controller="Movie">Add Movie</button>
</form>