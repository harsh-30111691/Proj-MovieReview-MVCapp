@model List<OmdbMovie>

<head>
    <link rel="stylesheet" href="~/wwwroot/css/site.css">
    <style>
      .search-button {
    background-color: #007bff; /* Background color */
    color: #fff; /* Text color */
    border: none; /* Remove border */
    padding: 5px 10px; /* Padding for button size */
    cursor: pointer; /* Show hand cursor on hover */
    border-radius: 5px; /* Rounded corners */
}

/* Hover Effect */
.search-button:hover {
    background-color: #0056b3; /* Darker background color on hover */
}

/* Focus Effect (for accessibility) */
.search-button:focus {
    outline: none; /* Remove default focus outline (customize as needed) */
    box-shadow: 0 0 5px #007bff; /* Add a subtle shadow when focused */
}
    </style>
</head>
<script src="~/wwwroot/js/site.js"></script>
<body >
   

   <div>
   @using (Html.BeginForm("ShowMoviesByGenre","Movie",FormMethod.Get))
   {
      <label >Genre:</label>
       <select id="genre" name="genre" >
        <option value="">-- Select Genre --</option>
        <option value="Action">Action</option>
        <option value="Comedy">Comedy</option>
        <option value="Drama">Drama</option>
        <option value="Horror">Horror</option>
      </select>
        <button type="submit" class="search-button">search</button>

   }
   </div>
