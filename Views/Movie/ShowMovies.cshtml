 <div class="d-flex flex-wrap" style="margin-top:8rem">
    @foreach(OmdbMovie movie in Model )

    {<div class="flex-card-col">
   <form action="Details" onclick="submit()" method="get">
    
         <img class="movie-poster"  src=@movie.Poster alt="unavailable">
         <div class="card-body content" >
          <h3 class="movie-title">@movie.Title</h3>
          <h4 class="movie-info"><strong>Year:</strong> @movie.Year</h4>
          <h4 class="movie-info"><strong>Genre:</strong> @movie.Genre</h4>
          <h4 class="movie-info"><strong>Director:</strong> @movie.Director</h4>
          <h4 class="movie-info"><strong>Actors:</strong> @movie.Actors</h4>
         </div>
      <input type="hidden" name="title" value="@movie.Title">
      </form>
     </div>
     
    }
   

 </div>
 
   

</body>


